<openerp>
<data>

<record id="create_customer_profile_form" model="ir.ui.view">
	<field name="name">cim.create.customer.profile.form</field>
	<field name="model">cim.create.customer.profile</field>
	<field name="arch" type="xml">
		<form string="Create Customer Profile" version="7.0">
			<group>
				<field name="name"/>
				<field name="partner_id" readonly="1"/>
				<field name="invoice_addr_id" />
				<field name="profile_id" attrs="{'invisible': [('manual','=',False)],'required': [('manual','!=',False)]}"/>
				<field name="manual" invisible="1" />
			</group>
			<footer>
				<button name="send_request" string="Create Profile" type="object" 
					class="oe_highlight" attrs="{'invisible': [('manual','!=',False)]}"/>
				<button name="add_existing_customer_profile" string="Add Existing Customer Profile" type="object" 
					class="oe_highlight" attrs="{'invisible': [('manual','=',False)]}"/>
				or
				<button string="Cancel" class="oe_link" special="cancel"/>
			</footer>
		</form>
	</field>
</record>

</data>
</openerp>